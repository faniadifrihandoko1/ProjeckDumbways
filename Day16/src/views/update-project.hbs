    <div class="container my-5">
      <h1 class="text-center">Update Project</h1>
      <div class="d-flex justify-content-center my-4">
        <div class="col-6">
          <form method="post" action="/update-project" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{data.id}}" />
            <div class="mb-3">
              <label class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="inputTitle"
                name="name"
                value="{{data.name}}"
              />
            </div>
            <div class="row my-3">
              <div class="col-md-6">
                <div class="form-outline">
                  <label class="form-label">Star Date</label>
                  <input
                    type="date"
                    class="form-control"
                    id="startDate"
                    name="startDate"
                    value="{{data.start_date}}"
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-outline">
                  <label class="form-label">End Date</label>
                  <input
                    type="date"
                    class="form-control"
                    id="endDate"
                    name="endDate"
                    value="{{data.end_date}}"
                  />
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Message</label>
              <textarea
                class="form-control"
                rows="3"
                id="inputMessage"
                name="description"
              >{{data.description}}</textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Technologies</label>
              <div class="d-flex flex-row">
                <div class="cold-md-6 me-2">
                  <div>
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="flexCheckDefault"
                      name="html5"
                      value="true"
                      {{#each data.tech}}
                    {{#ifCond this '==' "html5"}}checked {{/ifCond}}
                      {{/each}}

                    <label class="form-check-label" for="flexCheckDefault">
                      HTML
                    </label>
                  </div>
                  <div>
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="flexCheckDefault"
                      name="css3"
                      value="true"
                      {{#each data.tech}}
                    {{#ifCond this '==' "css3"}}checked {{/ifCond}}
                      {{/each}}
                    />
                    <label class="form-check-label" for="flexCheckDefault">
                      CSS
                    </label>
                  </div>
                </div>
                <div class="cold-md-6">
                  <div>
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="flexCheckDefault"
                      name="js"
                      value="true"                
                      {{#each data.tech}}
                    {{#ifCond this '==' "js"}}checked {{/ifCond}}
                      {{/each}}
                    />
                    <label class="form-check-label" for="flexCheckDefault">
                      Javascript
                    </label>
                  </div>
                  <div>
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="typescript"
                      name="react"
                      value="true"
                      {{#each data.tech}}
                    {{#ifCond this '==' "react"}}checked {{/ifCond}}
                      {{/each}}
                    />
                    <label class="form-check-label" for="flexCheckDefault">
                      react
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Image</label>
              <input
                type="file"
                class="form-control"
                id="inputImage"
                name="image"
                value="{{data.image}}"
              />
            </div>
            <div class="text-end">
              <button type="submit" class="btn btn-dark">Update Project</button>
            </div>
          </form>
        </div>
      </div>
